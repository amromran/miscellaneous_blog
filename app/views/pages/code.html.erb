<div id="terminal"></div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const term = document.createElement("div");
        term.style.cssText = `
      background:black;color:white;
      font-family:monospace;padding:1rem;
      border-radius:10px;
      width:600px;max-width:100%;
      height:300px;overflow-y:auto;
    `;
        const input = document.createElement("input");
        input.style.cssText = "width:100%;background:black;color:white;border:none;outline:none;";
        input.placeholder = "Type command (add, list, done, exit)...";

        const tasks = [];
        term.appendChild(input);
        document.getElementById("terminal").appendChild(term);

        function log(msg) {
            const p = document.createElement("div");
            p.textContent = msg;
            term.insertBefore(p, input);
            term.scrollTop = term.scrollHeight;
        }

        input.addEventListener("keydown", e => {
            if (e.key === "Enter") {
                const cmd = input.value.trim();
                input.value = "";
                if (cmd.startsWith("add ")) {
                    const task = cmd.slice(4);
                    tasks.push(task);
                    log(`Added: ${task}`);
                } else if (cmd === "list") {
                    if (tasks.length === 0) log("No tasks.");
                    else tasks.forEach((t,i) => log(`${i+1}. ${t}`));
                } else if (cmd.startsWith("done ")) {
                    const n = parseInt(cmd.split(" ")[1]);
                    if (!n || n>tasks.length) log("Invalid index.");
                    else log(`Removed: ${tasks.splice(n-1,1)}`);
                } else if (cmd === "exit") {
                    log("Bye!");
                    input.disabled = true;
                } else {
                    log("Unknown command.");
                }
            }
        });
    });
</script>
